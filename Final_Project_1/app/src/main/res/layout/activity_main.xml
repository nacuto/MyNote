<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    tools:context="com.burytomorrow.final_project.MainActivity">

    <!--上标题布局-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="53dp"
        android:padding="5dp"
        android:background="#393A3F"
        android:id="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:gravity="start|center">
            <Button
                android:id="@+id/main_cancel"
                android:layout_width="53dp"
                android:layout_height="34dp"
                android:background="@drawable/buttonstyle"
                android:textColor="@color/white"
                android:text="取消"
                android:visibility="gone" />
            <ImageButton
                android:id="@+id/main_search_time"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@mipmap/search1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/main_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="笺"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="19sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="3dp"
            android:gravity="end|center">
            <Button
                android:id="@+id/main_select_all"
                android:layout_width="53dp"
                android:layout_height="34dp"
                android:background="@drawable/buttonstyle"
                android:text="全选"
                android:textColor="@color/white"
                android:visibility="gone" />
            <ImageButton
                android:id="@+id/main_mode"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@mipmap/gongge" />
        </LinearLayout>
    </LinearLayout>
    <!--搜索框布局-->
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/searchbox"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@android:drawable/ic_search_category_default" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:gravity="start|center">
            <EditText
                android:id="@+id/main_search_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@null"
                android:hint="输入关键字查询" />
        </LinearLayout>
    </LinearLayout>
    <!--进度条布局-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/line2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        android:id="@+id/main_progressbar"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        android:gravity="center">
        <ProgressBar
            android:layout_width="50dp"
            android:layout_height="50dp"
            style="?android:attr/progressBarStyleLarge"/>
    </LinearLayout>
    <!--列表布局-->
    <LinearLayout
        android:layout_width="0dp"
        android:id="@+id/list_layout"
        app:layout_constraintBottom_toTopOf="@+id/line2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        android:layout_height="0dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
    <!--隐藏菜单栏布局-->
    <LinearLayout
        android:id="@+id/hidemenu"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        android:baselineAligned="false">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageButton
                android:id="@+id/main_delete"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/circle"
                android:src="@mipmap/delete"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageButton
                android:id="@+id/main_lock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle"
                android:src="@mipmap/lock"/>
        </LinearLayout>
    </LinearLayout>
    <!--辅助对其控件-->
    <View
        android:layout_width="368dp"
        android:layout_height="1dp"
        android:id="@+id/line2"
        android:background="#1E000000"
        app:layout_constraintBottom_toTopOf="@+id/hidemenu"
        tools:layout_editor_absoluteX="0dp" />
    <!--增加按钮-->
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_add"
        android:src="@mipmap/add"
        app:backgroundTint="@color/white"
        app:backgroundTintMode="src_atop"
        app:rippleColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/hidemenu"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="30dp"
        app:fabSize="mini"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp" />
    <!--返回顶部按钮-->
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_to_top"
        android:src="@mipmap/back_to_top"
        app:backgroundTint="@color/white"
        app:backgroundTintMode="src_atop"
        app:rippleColor="@color/white"
        app:fabSize="mini"
        app:layout_constraintBottom_toTopOf="@+id/main_add"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp" />

</android.support.constraint.ConstraintLayout>
